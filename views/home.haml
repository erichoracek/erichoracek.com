  .container
    .header
      %p= "I publish open source libraries for iOS when I get the chance."
    - if Repos.all
      - Repos.all.each do |repo|
        .library
          .name
            %a{ href: repo["html_url"], target: '_blank' }= repo["name"]
          .stargazers
            %i.ss-icon star
            %p= repo["watchers"]
          .forks
            %i.ss-icon fork
            %p= repo["forks"]
          .description
            %p= repo["description"]

